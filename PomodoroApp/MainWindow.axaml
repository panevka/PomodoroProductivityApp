<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:PomodoroApp"
    mc:Ignorable="d" Width="700" Height="500"
    x:Class="PomodoroApp.MainWindow"
    Title="PomodoroApp">

    <Grid Background="#241f31" >
            
                <Border VerticalAlignment="Top" Height="50" Margin="10" CornerRadius="50"
                        Background="#4b0082">
                    <TextBlock Margin="10" FontSize="20"
                    Foreground="#ffffff"
                    Text="pomodoro app"/>
                </Border>
                
                <views:Timer VerticalAlignment="Center" HorizontalAlignment="Center" />
                <views:SettingsControl Name="SettingsControl" IsVisible="False"/>
               
                <Button Name="SettingsButton" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Height="50" Width="80" Margin="20">
                    <TextBlock Foreground="#ffffff" HorizontalAlignment="Center" 
                               VerticalAlignment="Center" Text="Settings"/>
                    
                </Button>
                
                
                

    </Grid>
</Window>
